    "compilerOptions":{
        "outDir": "./dist",
        "rootDir": "./src",
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "strict": true,
        "esModuleInterop": true,
        "skipDefaultLibCheck": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules"]
}